<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.abc.app.myapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NETFLIX"
        android:textSize="40dp"
        android:textColor="#ff0000"
        android:id="@+id/textView" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/emailInput"
        android:hint="Email"
        android:layout_marginTop="37dp"
        android:shadowColor="#ff0000"
        android:layout_below="@+id/editText2"
        android:textSize="20dp"
        android:layout_alignStart="@+id/passwordInput" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/passwordInput"
        android:hint="Password"
        android:textSize="20dp"
        android:layout_below="@+id/emailInput"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:id="@+id/button"
        android:backgroundTint="#ff0000"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:background="#ff0000"
        android:layout_below="@+id/checkBox"
        android:layout_alignStart="@+id/passwordInput"
        android:layout_alignEnd="@+id/passwordInput" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 정보저장 ?"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/passwordInput"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook으로 로그인"
        android:id="@+id/button2"
        android:drawableTint="#2609fe"
        android:background="#053ffc"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="20dp"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="로그인"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/checkBox"
        android:layout_alignEnd="@+id/checkBox"
        android:textSize="30dp" />


</RelativeLayout>
